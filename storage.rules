rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /users/{userId}/profile/{filename} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Instructor profile images
    match /instructors/{instructorId}/profile/{filename} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == instructorId;
    }
    
    // Course materials
    match /courses/{courseId}/{filename} {
      allow read: if true;
      allow write: if request.auth != null && 
                    (exists(/databases/$(database)/documents/instructors/$(request.auth.uid)) || 
                     exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }
  }
} 
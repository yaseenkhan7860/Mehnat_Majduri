rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific data
    match /users/{userId} {
      allow read: if request.auth.uid == userId || 
                    request.auth.token.role == 'admin';
      allow write: if request.auth.uid == userId;
    }
    
    // Course data - admins can do anything, instructors can create and edit their own
    match /courses/{courseId} {
      allow read: if true; // All authenticated users can read courses
      allow create: if request.auth.token.role == 'instructor' || 
                      request.auth.token.role == 'admin';
      allow update, delete: if request.auth.token.role == 'admin' || 
                              (request.auth.token.role == 'instructor' && 
                               resource.data.instructorId == request.auth.uid);
    }
    
    // Admin-only data
    match /admin/{document=**} {
      allow read, write: if request.auth.token.role == 'admin';
    }
  }
}
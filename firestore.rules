rules_version = '2';  
service cloud.firestore {  
  match /databases/{database}/documents {  
    // User collection rules
    match /users/{userId} {  
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Instructor collection rules
    match /instructors/{instructorId} {  
      allow read: if request.auth != null && request.auth.uid == instructorId;
      // Only admins can create/update instructor accounts
      allow write: if request.auth != null && 
                     exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admin collection rules
    match /admins/{adminId} {  
      allow read: if request.auth != null && request.auth.uid == adminId;
      // Only admins can create other admin accounts
      allow write: if request.auth != null && 
                     exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }  
} 